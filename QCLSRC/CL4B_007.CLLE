INCLUDE SRCSTMF('STAT.CLLE')
DCL     VAR(&MESSAGGIO)   TYPE(*CHAR) LEN(80)
CHGVAR  VAR(&MESSAGGIO) VALUE('Il file <' *CAT &NOMEFILE)
