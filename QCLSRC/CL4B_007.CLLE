CHGVAR VAR(&MESSAGGIO) VALUE(&MESSAGGIO *TCAT '>, di tipo' +
                 *BCAT &S13_OBJTYP +
                 *TCAT ', utilizza' +
                 *BCAT %CHAR(&S06_SIZE) +
                 *BCAT 'bytes')
SNDPGMMSG MSG(&MESSAGGIO)
ENDPGM